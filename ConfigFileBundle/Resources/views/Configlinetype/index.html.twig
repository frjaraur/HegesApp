{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Config Line Type - LIST</h1></p>
<form action="{{ path('configlinetype_new') }}"><button type="submit">CREAR NUEVO</button></form>
<table><tr><th class="tabla_datos">Id</th>
        <th class="tabla_datos">Name</th>
        <th class="tabla_datos">Fieldsnumber</th>
        <th class="tabla_datos">Delimiter</th>
        <th class="tabla_datos">Monitor</th>
        <th colspan="2"></th>
    </tr>
{% for entity in entities %}
    <tr><td class="tabla_datos"><a href="{{ path('configlinetype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td class="tabla_datos">{{ entity.name }}</td>
        <td class="tabla_datos">{{ entity.fieldsnumber }}</td>
        <td class="tabla_datos">{{ entity.delimiter }}</td>
        <td class="tabla_datos">{{ entity.fkmonitor }}</td>
        <td class="tabla_datos_sin_borde"><form action="{{ path('configlinetype_show', { 'id': entity.id }) }}"><button type="submit">MOSTRAR</button></form></td>
        <td class="tabla_datos_sin_borde"><form action="{{ path('configlinetype_edit', { 'id': entity.id }) }}"><button type="submit">EDITAR</button></form></td>
    </tr>
{% endfor %}
</table>
{% endblock hegesappbody %}