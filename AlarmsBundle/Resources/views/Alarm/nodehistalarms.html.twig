{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Alarmas de las últimas 24 horas del nodo</h1></p>
<p>BUSCAR <input type="text" name="q" value=""> <span id="count"></span></p>
<p id="none" style="display:none">No hay coincidencias para tu busqueda!</p>
<ul class="tabla_datos">
    <li class="tabla_datos"><table class="tabla_alarmas"><tr>
        {# <th width="50" class="tabla_alarmas">MSGID</th>#}
        <th width="40"  class="tabla_alarmas">Dupl</th>
        <th width="40"  class="tabla_alarmas">Usuario</th>
        <th width="100" class="tabla_alarmas">Nodo</th>
        <th width="60"  class="tabla_alarmas">Primera</th>
        <th width="60"  class="tabla_alarmas">Última</th>
        <th width="60" class="tabla_alarmas">Severidad</th>
        <th width="150" class="tabla_alarmas">Aplicación</th>
        <th width="200" class="tabla_alarmas">Objeto</th>
        <th width="140" class="tabla_alarmas">Grupo Mensajes</th>            
        <th width="270" class="tabla_alarmas">Texto</th>            
    </tr></table></li>
</ul>
<ul id="names" class="tabla_datos">
    {% for entity in entities %}
    <li class="tabla_datos"><table class="tabla_alarmas"><tr>
        {# <td width="50" class="tabla_alarmas">{{ entity.alarmmsgid }}</td>#}
        <td width="40"  class="tabla_alarmas">{{ entity.alarmdupl }}</td>
        <td width="40"  class="tabla_alarmas">{{ entity.alarmowned }}</td>
        <td width="100" class="tabla_alarmas">{{ entity.alarmnode }}</td>
        <td width="60"  class="tabla_alarmas">{{ entity.alarmfirst }}</td>
        <td width="60"  class="tabla_alarmas">{{ entity.alarmlast }}</td>
{% if entity.alarmseverity == 'Normal' %}
        <td width="60"  class="tabla_alarmas_normal">{{ entity.alarmseverity }}</td>
{% endif %}
{% if entity.alarmseverity == 'Critical' %}
        <td width="60"  class="tabla_alarmas_critical">{{ entity.alarmseverity }}</td>
{% endif %}
{% if entity.alarmseverity == 'Major' %}
        <td width="60"  class="tabla_alarmas_major">{{ entity.alarmseverity }}</td>
{% endif %}
{% if entity.alarmseverity == 'Minor' %}
        <td width="60"  class="tabla_alarmas_minor">{{ entity.alarmseverity }}</td>
{% endif %}
{% if entity.alarmseverity == 'Warning' %}
        <td width="60"  class="tabla_alarmas_warning">{{ entity.alarmseverity }}</td>
{% endif %}
{% if entity.alarmseverity == 'Unknown' %}
        <td width="60"  class="tabla_alarmas_unknown">{{ entity.alarmseverity }}</td>
{% endif %}
        <td width="150" class="tabla_alarmas">{{ entity.alarmapp }}</td>                                  
        <td width="200" class="tabla_alarmas"><a class="tabla_alarmas" title="{{ entity.alarmobj }}" href="#">{{ entity.alarmobj | truncate(30) }}</a></td>
        <td width="140" class="tabla_alarmas">{{ entity.alarmmsggrp }}</td>
        <td width="270" class="tabla_alarmas"><a class="tabla_alarmas" title="{{ entity.alarmtext }}" href="#">{{ entity.alarmtext | truncate(70) }}</a></td>
    </tr></table></li>
    {% endfor %}
</ul>
<form><input type="button" value="ATRAS" onClick="history.back();"></form>
{% endblock hegesappbody %}
