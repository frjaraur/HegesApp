{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Nodo {{ entity.name }} ({{ entity.ovostatus }})</h1></p>

<form id="form_datos" action="{{ path('server_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}</form><br>
<table class="tabla_datos_sin_borde"><tr><td class="tabla_datos_sin_borde"><form><button form="form_datos" type="submit">GUARDAR</button></form></td>
            <!-- <td class="tabla_datos_sin_borde"><form action="{{ path('server') }}"><button type="submit">ATRAS</button></form></td> -->
            <td class="tabla_datos_sin_borde"><form><input type="button" value="ATRAS" onClick="history.back();"></form></td>
            <td class="tabla_datos_sin_borde"><form action="{{ path('server_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit"  onclick="return(confirm('No hay marcha atrás, estás seguro de que quieres borrar el nodo y toda su configuración?'))">BORRAR</button></form></td>
</tr></table>
{% endblock hegesappbody %}
