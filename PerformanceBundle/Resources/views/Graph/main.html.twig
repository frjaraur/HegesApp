{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Gráficas por Nodos</h1></p>
<p>BUSCAR <input type="text" name="q" value=""> <span id="count"></span></p>
<p id="none" style="display:none">No hay coincidencias para tu busqueda!</p>
<form action="{{ path('graph') }}"><button type="submit">Gráficas Disponibles</button></form>
    <ul class="tabla_datos">
        <li class="tabla_datos"><table class="tabla_datos"><tr>
            <th width="150" class="tabla_datos">Nombre Nodo</th>
            <th width="150" class="tabla_datos">Sistema Operativo</th>
            <td width="250" class="tabla_datos_sin_borde" colspan="2"> </td>
        </tr></table></li>
    </ul>
    <ul id="names" class="tabla_datos">
{% for entity in entities %}
        <li class="tabla_datos"><table class="tabla_datos"><tr>
            <td width="150" class="tabla_datos">{{ entity.name }}</td>
            <td width="150" class="tabla_datos">{{ entity.fkos.name }}</td>
            <td width="200" class="tabla_datos_sin_borde"><form action="{{ path('graph_node', { 'nodeid': entity.id }) }}"><button type="submit">MOSTRAR GRÁFICAS</button></form></td>
        </tr></table></li>
        {# <li>{{ entity.name }} #}
    {% endfor %}
    </ul>
{% endblock hegesappbody %}