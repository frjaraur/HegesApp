        <td class="tabla_datos">{{ entity.graphdescription }}</td>
{#         <td class="tabla_datos">{{ entity.graphurl }}</td>#}
{#         <td class="tabla_datos">{{ entity.graphicon }}</td>#}
		<td class="tabla_datos_sin_borde"><form action="{{ entity.graphurl }}" method="post" target="_blank" ><button type="submit">MOSTRAR GRÁFICA</button></form></td>
    </tr>
{% endfor %}
