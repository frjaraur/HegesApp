{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Gráficas Disponibles para el nodo {{ node_name }}</h1></p>
<form action="{{ path('graph') }}"><button type="submit">GRÁFICAS DISPONIBLES</button></form>

<form action="{{ path('graph_main') }}"><button type="submit">ATRÁS</button></form>
<!-- <form><input type="button" value="ATRÁS" onClick="history.back();"></form>  -->
<table class="tabla_datos">
    <tr><th class="tabla_datos">Nombre</th>
        <th class="tabla_datos">Descripción</th>
{#         <th class="tabla_datos">URL</th>#}
{#         <th class="tabla_datos">Icono</th>#}
    </tr>
{# {% if defined specific_node_graphs %} #}
{% for entity in specific_node_graphs %}
