{% extends 'HegesAppMainBundle:Default:hegesappbase.html.twig' %}
{% block hegesappbody %}
<p><h1 class="tabla_datos">Editar Propiedades del Monitor</h1></p>
<form id="form_datos" action="{{ path('monitor_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}</form>
<table><tr><td class="tabla_datos_sin_borde"><form><button form="form_datos" type="submit">GUARDAR</button></form></td>
            <!-- <td class="tabla_datos_sin_borde"><form action="{{ path('monitor') }}"><button type="submit">ATRAS</button></form></td> -->
            <td class="tabla_datos_sin_borde"><form><input type="button" value="ATRAS" onClick="history.back();"></form></td>
            <td class="tabla_datos_sin_borde">
                <form action="{{ path('monitor_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}<button type="submit"  onclick="return(confirm('No hay marcha atrás, estás seguro de que quieres borrar el monitor y todas las configuraciones asociadas (servicios y ficheros de configuración)?'))">BORRAR</button></button></form></td>
</tr></table>
{% endblock hegesappbody %}
